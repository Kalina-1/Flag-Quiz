<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.flagquiz">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FlagQuiz"
        tools:targetApi="31">

        <!-- ✅ Only one launcher activity (MAIN + LAUNCHER) -->
        <activity
            android:name=".view.SplashActivity"
            android:exported="true"
            android:label="@string/title_activity_splash"
            android:theme="@style/Theme.FlagQuiz">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ✅ Other app activities -->
        <activity
            android:name=".view.ForgetPasswordActivity"
            android:exported="true"
            android:label="@string/title_activity_forget_password"
            android:theme="@style/Theme.FlagQuiz" />

        <activity
            android:name=".view.QuizScreenActivity"
            android:exported="true"
            android:label="@string/title_activity_quiz"
            android:theme="@style/Theme.FlagQuiz" />

        <activity
            android:name=".view.NavigationActivity"
            android:exported="true"
            android:label="@string/title_activity_navigation"
            android:theme="@style/Theme.FlagQuiz" />

        <activity
            android:name=".view.WelcomeActivity"
            android:exported="true"
            android:label="@string/title_activity_welcome"
            android:theme="@style/Theme.FlagQuiz" />

        <activity
            android:name=".view.SignupActivity"
            android:exported="true"
            android:label="@string/title_activity_signup"
            android:theme="@style/Theme.FlagQuiz" />

        <activity
            android:name=".view.LoginActivity"
            android:exported="true"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.FlagQuiz" />

        <activity
            android:name=".view.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.FlagQuiz" />

    </application>

</manifest>
